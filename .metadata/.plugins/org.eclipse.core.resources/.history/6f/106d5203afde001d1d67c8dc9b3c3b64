#include <stdio.h>
#include <stdlib.h>

int entrada(int* opcao){
	printf("Digite");
	scanf("%d",*opcao);
	return *opcao;
}

int main(void) {
	int opcao;
	entrada(&opcao);
	printf("%d", opcao);
}
